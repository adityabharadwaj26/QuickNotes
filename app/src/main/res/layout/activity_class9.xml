<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.blogspot.understandingthecode.quicknotes.Class9Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Class9"
        android:id="@+id/Class9textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Maths"
        android:id="@+id/Maths"
        android:layout_below="@+id/Class9textView"
        android:layout_toLeftOf="@+id/Class9textView"
        android:layout_toStartOf="@+id/Class9textView"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Science"
        android:id="@+id/Science"
        android:layout_alignTop="@+id/Maths"
        android:layout_toRightOf="@+id/Class9textView"
        android:layout_toEndOf="@+id/Class9textView" />
</RelativeLayout>
